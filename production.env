# Erlessed Healthcare Platform - Production Environment Template
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=5000
TZ=Africa/Nairobi

# Database (Use your production PostgreSQL connection string)
DATABASE_URL=postgresql://username:password@host:5432/erlessed_prod
PGHOST=your-postgres-host
PGPORT=5432
PGUSER=erlessed_user
PGPASSWORD=your-secure-password
PGDATABASE=erlessed_prod

# Security
JWT_SECRET=your-256-bit-secret-key-here

# AI Services (Required for analytics and decision support)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Payment Processing (Required for billing features)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-publishable-key

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance & Caching
REDIS_URL=redis://your-redis-host:6379

# HMS Integration
HMS_API_USERNAME=your-hms-username
HMS_API_PASSWORD=your-hms-password

# Deployment Configuration
FLY_APP_NAME=erlessed-healthcare
RENDER_SERVICE_NAME=erlessed-app

# Backup Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BACKUP_BUCKET=erlessed-backups

# Notification Endpoints (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url